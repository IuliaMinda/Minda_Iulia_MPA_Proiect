@{
}

@model List<Minda_Iulia_Proiect.Models.Rent>

<h1>Rents</h1>

<table class="table">
    <thead>
        <tr>
            <th>RentID</th>
            <th>CustomerID</th>
            <th>CarID</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rent in Model)
        {
            <tr>
                <td>@rent.RentID</td>
                <td>@rent.CustomerID</td>
                <td>@rent.CarID</td>
                <td>@rent.StartDate</td>
                <td>@rent.EndDate</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Rents" asp-action="Edit" asp-route-id="@rent.RentID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>