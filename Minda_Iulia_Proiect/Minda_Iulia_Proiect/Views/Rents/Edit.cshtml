@model Minda_Iulia_Proiect.Models.Rent

<h1>Edit Rent</h1>

@if (Model is null)
{
    <p>No rent was found</p>
}
else {
<form method="post">

    <div class="mt-3">
        <label class="form-label">Rent ID</label>
        <input type="text" class="form-control" asp-for="RentID" readonly>
    </div>
    <div class="mt-3">
        <label class="form-label">Customer ID</label>
        <input type="text" class="form-control" asp-for="CustomerID">
    </div>
    <div class="mt-3">
        <label class="form-label">Car ID</label>
        <input type="text" class="form-control" asp-for="CarID">
    </div>
    <div class="mt-3">
        <label class="form-label">Start Date</label>
        <input type="text" class="form-control" asp-for="StartDate">
    </div>
    <div class="mt-3">
        <label class="form-label">End Date</label>
        <input type="text" class="form-control" asp-for="EndDate">
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-controller="Rents" asp-action="Delete">Delete</button>
    </div>

</form>
}

