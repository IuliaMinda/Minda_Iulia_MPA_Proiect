@{
}

@model Minda_Iulia_Proiect.Models.Card

<h1>Edit Card</h1>

@if (Model is null)
{
    <p>No card was found</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">CardID</label>
            <input type="text" class="form-control" asp-for="CardID" readonly>
        </div>
        <div class="mt-3">
            <label class="form-label">Level</label>
            <input type="text" class="form-control" asp-for="Level">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-controller="Cards" asp-action="Delete">Delete</button>
        </div>

    </form>
}

