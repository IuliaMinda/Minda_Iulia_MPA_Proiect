@{
}

@model List<Minda_Iulia_Proiect.Models.Card>

<h1>Cards</h1>

<table class="table">
    <thead>
        <tr>
            <th>CardID</th>
            <th>Level</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var card in Model)
        {
            <tr>
                <td>@card.CardID</td>
                <td>@card.Level</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Cards" asp-action="Edit" asp-route-id="@card.CardID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>