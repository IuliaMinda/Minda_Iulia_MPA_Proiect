@{
}

@model List<Minda_Iulia_Proiect.Models.Customer>

<div class="d-flex align-items-center justify-content-between">
    <h1>Customers</h1>
    <a class="btn btn-primary" asp-controller="Customers" asp-action="Add">Add</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>CustomerID</th>
            <th>CardID</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.CardID</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>
                    <a class = "btn btn-primary" asp-controller="Customers" asp-action="Edit" asp-route-id="@customer.CustomerID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>