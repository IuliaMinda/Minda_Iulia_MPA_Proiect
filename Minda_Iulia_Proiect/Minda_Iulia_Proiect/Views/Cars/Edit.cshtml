@{
}

@model Minda_Iulia_Proiect.Models.Car

<h1>Edit Car</h1>

@if (Model is null)
{
    <p>No car was found</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">CarID</label>
            <input type="text" class="form-control" asp-for="CarID" readonly>
        </div>
        <div class="mt-3">
            <label class="form-label">Registration plate</label>
            <input type="text" class="form-control" asp-for="RegistrationPlate">
        </div>
        <div class="mt-3">
            <label class="form-label">Make</label>
            <input type="text" class="form-control" asp-for="Make">
        </div>
        <div class="mt-3">
            <label class="form-label">Model</label>
            <input type="text" class="form-control" asp-for="Model">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

    </form>
}

