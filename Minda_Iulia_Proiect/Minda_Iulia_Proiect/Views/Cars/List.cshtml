@{
}

@model List<Minda_Iulia_Proiect.Models.Car>

<div class="d-flex align-items-center justify-content-between">
    <h1>Cars</h1>
    <a class="btn btn-primary" asp-controller="Cars" asp-action="Add">Add</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>CarID</th>
            <th>Registration Plate</th>
            <th>Make</th>
            <th>Model</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.CarID</td>
                <td>@car.RegistrationPlate</td>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Cars" asp-action="Edit" asp-route-id="@car.CarID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>